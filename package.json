    "@typescript-eslint/parser": "^6.9.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.52.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.2",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
